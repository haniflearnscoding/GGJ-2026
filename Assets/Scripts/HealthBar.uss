.health-container {
    position: absolute;
    left: 20px;
    top: 20px;
}

.health-bar-bg {
    width: 200px;
    height: 25px;
    background-color: rgb(40, 40, 40);
    border-radius: 4px;
    border-width: 2px;
    border-color: rgb(20, 20, 20);
}

.health-bar-fill {
    height: 100%;
    width: 100%;
    background-color: rgb(76, 175, 80);
    border-radius: 2px;
    transition-property: width, background-color;
    transition-duration: 0.2s;
}
